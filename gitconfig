[color "branch"]
    current = green
    local = magenta
    remote = red

[alias]
    unstage = reset HEAD 
    discard-changes = checkout -- 
    branches = branch -vv
    history = log --pretty=format:'%C(red)%h %C(yellow)%ad%C(reset) %s%d %C(blue)[%an]%C(reset)' --graph --date=short
