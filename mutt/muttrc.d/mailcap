#
# Tell Mutt which MIME types to auto-view
#
# ~/.mutt/autoview
#

application/pgp-keys; pgp -f < %s ; copiousoutput
application/x-gunzip; gunzip < %s ; copiousoutput
application/x-gzip;   gunzip < %s ; copiousoutput
application/x-tar-gz; tar -tzvf < %s ; copiousoutput

text/html                ; lynx -assume_charset=%{charset} -width=78 -dump %s; nametemplate=%s.html; copiousoutput
application/pdf          ; zathura %s                      ; copiousoutput
image/*                  ; eog %s                          ; copiousoutput
application/octet-stream ; echo %s "can be anything..."    ; copiousoutput

# vim: ft=muttrc
